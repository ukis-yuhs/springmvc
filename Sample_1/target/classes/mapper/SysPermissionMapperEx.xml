<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.yuhs.dao.SysPermissionMapperEx" >

  <!--根据用户账号查询Menu资源信息-->
  <select id="findMenuListByUserId" parameterType="string" resultType="com.yuhs.entity.SysPermission">
      SELECT
          *
      FROM
          sys_permission
      WHERE
          type = 'menu'
              AND id IN (SELECT
                  sys_permission_id
              FROM
                  sys_role_permission
              WHERE
                  sys_role_id IN (SELECT
                          sys_role_id
                      FROM
                          sys_user
                      WHERE
                          sys_user_id = #{id}))
  </select>
  <!--根据用户账号查询url资源信息-->
  <select id="findPermissionListByUserId" parameterType="string" resultType="com.yuhs.entity.SysPermission">
      SELECT
          *
      FROM
          sys_permission
      WHERE
          type = 'permission'
              AND id IN (SELECT
                  sys_permission_id
              FROM
                  sys_role_permission
              WHERE
                  sys_role_id IN (SELECT
                          sys_role_id
                      FROM
                          sys_user
                      WHERE
                          sys_user_id = #{id}))
  </select>
</mapper>